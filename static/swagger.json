        "summary": "Get post by owner and uuid.",
        "operationId": "GetPostByID",
        "parameters": [
          {
            "type": "string",
            "name": "owner",
            "in": "path",
            "required": true
          },
          {
            "type": "string",
            "name": "uuid",
            "in": "path",
            "required": true
          },
          {
            "example": "decentr1ltx6yymrs8eq4nmnhzfzxj6tspjuymh8mgd6gz",
            "description": "adds liked flag to response",
            "name": "requestedBy",
            "in": "query"
          }
        ],
        "responses": {
          "200": {
            "description": "Post",
            "schema": {
